    "class-validator": "^0.14.0",
    "connect-typeorm": "^2.0.0",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.9.0",
